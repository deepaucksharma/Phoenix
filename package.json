{
  "name": "phoenix",
  "version": "1.0.0",
  "private": true,
  "description": "Phoenix - Adaptive Cardinality Optimization System for OpenTelemetry",
  "workspaces": [
    "packages/*",
    "services/*",
    "tools/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:docker": "turbo run build:docker",
    "test": "turbo run test",
    "test:integration": "turbo run test:integration",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "dev": "turbo run dev --parallel",
    "deploy:dev": "docker-compose -f infrastructure/docker/compose/base.yaml -f infrastructure/docker/compose/dev.yaml up -d",
    "deploy:prod": "docker-compose -f infrastructure/docker/compose/base.yaml -f infrastructure/docker/compose/prod.yaml up -d",
    "logs": "docker-compose -f infrastructure/docker/compose/base.yaml logs -f",
    "health-check": "node tools/scripts/health-check.js"
  },
  "devDependencies": {
    "turbo": "^1.11.0",
    "@changesets/cli": "^2.27.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/deepaucksharma/Phoenix.git"
  },
  "keywords": [
    "opentelemetry",
    "observability",
    "monitoring",
    "cardinality",
    "optimization"
  ],
  "author": "Phoenix Team",
  "license": "MIT"
}