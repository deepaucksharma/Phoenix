{
  "name": "@phoenix/contracts",
  "version": "1.0.0",
  "description": "Phoenix shared contracts, schemas, and API definitions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "proto",
    "openapi",
    "schemas"
  ],
  "scripts": {
    "build": "npm run build:proto && npm run build:ts",
    "build:proto": "protoc --js_out=import_style=commonjs,binary:dist/proto --ts_out=dist/proto proto/*.proto",
    "build:ts": "tsc",
    "clean": "rm -rf dist",
    "test": "jest",
    "lint": "eslint . --ext .ts,.js"
  },
  "dependencies": {
    "google-protobuf": "^3.21.2",
    "ajv": "^8.12.0"
  },
  "devDependencies": {
    "@types/google-protobuf": "^3.15.10",
    "protoc-gen-ts": "^0.8.7",
    "typescript": "^5.3.0"
  }
}