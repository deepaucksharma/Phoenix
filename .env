# Phoenix Development Environment Configuration

# General Settings
ENVIRONMENT=development
LOG_LEVEL=debug
VERSION=latest

# Service Versions
PROMETHEUS_VERSION=v2.48.0
GRAFANA_VERSION=10.2.2
PUSHGATEWAY_VERSION=v1.6.2

# Collector Configuration
OTELCOL_MAIN_MEMORY_LIMIT_MIB=1024
OTELCOL_MAIN_GOMAXPROCS=2
OTELCOL_OBSERVER_MEMORY_LIMIT_MIB=512
OTELCOL_OBSERVER_MEMBALLAST_MIB=64
CONTROL_SIGNALS_PATH_IN_CONTAINER=/etc/otelcol/control/optimization_mode.yaml

# Control System Thresholds
TARGET_OPTIMIZED_PIPELINE_TS_COUNT=20000
THRESHOLD_OPTIMIZATION_CONSERVATIVE_MAX_TS=15000
THRESHOLD_OPTIMIZATION_AGGRESSIVE_MIN_TS=25000

# Control Loop Timing
ADAPTIVE_CONTROLLER_INTERVAL_SECONDS=60
ADAPTIVE_CONTROLLER_STABILITY_SECONDS=120

# Synthetic Generator Settings
SYNTHETIC_PROCESS_COUNT_PER_HOST=250
SYNTHETIC_HOST_COUNT=3
SYNTHETIC_METRIC_EMIT_INTERVAL_S=15

# Complex Generator Settings
METRIC_COUNT=1000
DIMENSION_COUNT=5

# Monitoring Settings
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GF_INSTALL_PLUGINS=

# Export Settings (Development - Disabled)
ENABLE_NR_EXPORT_FULL=false
ENABLE_NR_EXPORT_OPTIMISED=false
ENABLE_NR_EXPORT_EXPERIMENTAL=false

# New Relic Configuration (Development placeholders)
NEW_RELIC_OTLP_ENDPOINT=https://otlp.nr-data.net:4317
NEW_RELIC_LICENSE_KEY_FULL=placeholder
NEW_RELIC_LICENSE_KEY_OPTIMISED=placeholder
NEW_RELIC_LICENSE_KEY_EXPERIMENTAL=placeholder

# Development Features
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_PROFILING=true
PPROF_PORT=6060
